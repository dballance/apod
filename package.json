{
  "name": "starter",
  "version": "0.0.0",
  "description": "Typescript React Starter",
  "main": "index.js",
  "author": "Drew Ballance <drew.ballance@hexagon.com>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "webpack --config ./config/webpack.common.ts",
    "build:dev": "webpack --config ./config/webpack.dev.ts",
    "build:prod": "webpack --config ./config/webpack.prod.ts",
    "lint": "tslint -p .",
    "prettier": "prettier --config ./prettier.json --write \"./**/*.ts\"",
    "start": "webpack-dev-server --config ./config/webpack.dev.ts --open",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "dependencies": {
    "core-js": "^2.5.1",
    "ramda": "^0.24.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.11",
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.28",
    "@types/ramda": "^0.24.14",
    "@types/react": "^16.0.7",
    "@types/react-dom": "^16.0.0",
    "@types/react-hot-loader": "^3.0.4",
    "@types/webpack": "^3.0.10",
    "@types/webpack-env": "^1.13.1",
    "@types/webpack-merge": "^0.0.5",
    "clean-webpack-plugin": "^0.1.16",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "enzyme-to-json": "^3.1.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "prettier": "1.7.2",
    "react-hot-loader": "3.0.0-beta.7",
    "react-test-renderer": "^16.0.0",
    "ts-jest": "^21.0.1",
    "ts-loader": "^2.3.7",
    "ts-node": "^3.3.0",
    "tslib": "^1.7.1",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-config-standard": "^6.0.1",
    "tslint-loader": "^3.5.3",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "~2.5.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.8.2",
    "webpack-merge": "^4.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(tsx?)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(src/app).*\\.(test|spec)\\.(tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json"],
    "moduleDirectories": ["node_modules", "src"],
    "setupTestFrameworkScriptFile": "./spec/test.ts",
    "setupFiles": ["./spec/polyfills/requestAnimationFrame.ts"],
    "snapshotSerializers": ["enzyme-to-json/serializer"]
  }
}
